# ULS Cloud Frontend - Environment Variables
# Copy this file to .env.local and adjust values as needed

# SSO Service (Auth, organizations, subscriptions)
NEXT_PUBLIC_API_URL=http://localhost:8080/api/v1

# CRM Service (Customers, orders, communications)
NEXT_PUBLIC_CRM_API_URL=http://localhost:8081/api/v1

# Ticketing Service (Events, tickets, plans, payments)
NEXT_PUBLIC_TICKETING_API_URL=http://localhost:8082/api/v1

# Payment Service (Chapa payment initiation)
NEXT_PUBLIC_PAYMENT_API_URL=http://localhost:8083/api/v1

# Admin Service (Apps catalog, activity feed)
NEXT_PUBLIC_ADMIN_API_URL=http://localhost:8084/api/v1
